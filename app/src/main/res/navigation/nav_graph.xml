<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.max.interview.gameforcourse.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_mainFragment_to_ladderFragment"
            app:destination="@id/ladderFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.max.interview.gameforcourse.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/ladderFragment"
        android:name="com.max.interview.gameforcourse.LadderFragment"
        android:label="fragment_ladder"
        tools:layout="@layout/fragment_ladder" >
        <action
            android:id="@+id/action_ladderFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>